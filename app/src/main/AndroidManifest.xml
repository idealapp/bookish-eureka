<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.melanie.ideal">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19"></uses-sdk>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.melanie.ideal.Survey"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.melanie.ideal.Deals"
            android:label="@string/title_activity_deals">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.melanie.ideal.Yogurtland"
            android:label="@string/title_activity_yogurtland"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.melanie.ideal.BJs"
            android:label="@string/title_activity_bjs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.melanie.ideal.ViewMaster"
            android:label="@string/title_activity_view_master"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>

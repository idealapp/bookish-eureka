<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.melanie.ideal">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ideal_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.melanie.ideal.Deals"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.melanie.ideal.ViewMaster"
            android:label="@string/title_activity_view_master"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.melanie.ideal.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.melanie.ideal.Food"
            android:label="@string/title_activity_food"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.melanie.ideal.Peets"
            android:label="@string/title_activity_peets"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.melanie.ideal.Entertainment"
            android:label="@string/title_activity_entertainment"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.melanie.ideal.Redbox"
            android:label="@string/title_activity_redbox"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.melanie.ideal.Electronics"
            android:label="@string/title_activity_electronics"
            android:screenOrientation="portrait" ></activity>
    </application>

</manifest>

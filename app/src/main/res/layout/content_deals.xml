<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.melanie.ideal.Deals"
        tools:showIn="@layout/activity_deals">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/yogurtland"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:src="@drawable/yogurtland"
                style="?android:attr/borderlessButtonStyle"/>

            <ImageButton
                android:id="@+id/bjs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:src="@drawable/bjspreview"
                android:layout_below="@id/yogurtland"
                style="?android:attr/borderlessButtonStyle"/>

            <ImageButton
                android:id="@+id/viewmaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:src="@drawable/viewmaster"
                android:layout_below="@id/bjs"
                style="?android:attr/borderlessButtonStyle"/>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

